{
  "name": "app",
  "version": "1.0.0",
  "description": "NodeJS Task 3. Simple CRUD API",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start:dev": "npm run compile && node ./dist/index.js",
    "start:prod": "npm run build && node ./bundle/bundle.cjs",
    "start:multi": "npm run build && node ./bundle/bundle.cjs --cluster",
    "compile": "./node_modules/.bin/tsc",
    "build": "./node_modules/.bin/tsc && ./node_modules/.bin/webpack --stats-error-details",
    "lint": "./node_modules/.bin/eslint src/*",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --detectOpenHandles"
  },
  "lint-staged": {
    "*": "npm run lint"
  },
  "author": "Zeekka",
  "license": "ISC",
  "devDependencies": {
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.28.0",
    "@typescript-eslint/parser": "^5.28.0",
    "eslint": "^8.17.0",
    "jest": "^28.1.1",
    "prettier": "^2.7.0",
    "ts-loader": "^9.3.0",
    "ts-node": "^10.8.1",
    "typescript": "^4.7.3",
    "webpack": "^5.73.0",
    "webpack-cli": "^4.10.0"
  },
  "dependencies": {
    "dotenv": "^16.0.1",
    "uuid": "^8.3.2"
  }
}
